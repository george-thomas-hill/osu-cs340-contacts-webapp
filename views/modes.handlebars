<!-- READ Modes -->

<div class="center">
    <h1>Communication Modes</h1>
    <h3>These communication modes were generated by our community. <br> See something missing? Please add it!</h3>
</div>

<table>
    <thead>
        <th>Communication Modes</th>
    </thead>
    <tbody>
        {{#each modes}}
        <tr>
            <td>{{type}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<br>

<!-- CREATE Modes -->

<div class="center">
    <h3>Add a new mode.</h3>
</div>

<form action="/modes/{{currentUserId}}" method="post">
    <fieldset>
        <div class="spacerSmall"></div>
        <input type="text" name="mode" class="formControl" id="mode" placeholder="Mode of Communication" maxlength="50">
        <input type="submit" value="Add" class="formButton" id="modeSubmit">
    </fieldset>
</form>
